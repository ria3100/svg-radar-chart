{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "module": "esnext",
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["es2019", "dom"],
    "incremental": true
  },
  "exclude": ["node_modules", "**/*.js"],
  "include": [
    "types/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
  ]
}
